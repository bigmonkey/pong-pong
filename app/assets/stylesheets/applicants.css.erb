}

.appSelectContainer {
	float:left;
	width: 50%;
	font-size: 0.9em;
	margin: 0px 10px 5px 0px;

}

.appStyleSelect select{
  background: transparent;
  width: 142px;
  padding: 2px 3px;
  font-size: .8em;
  color: #666;
  border: 0;
