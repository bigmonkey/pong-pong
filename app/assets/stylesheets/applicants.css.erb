.appTextLeft {
	text-align: left;
}
.appTextRight {
	text-align: right;
}

/* holds appSidebar and appform */
.appMain {
	margin: 0px auto;
	width: 800px;
	overflow: auto;
	height: 100%;
}


/*SIDEBAR*/

#appSidebar {
    background-color: #fff;
    width: 280px;
    float: left;
    margin: 15px 0px 0px; 
}

.appSidebarSeals img{
	vertical-align: middle;
}

.appSidebarSeals {
	margin: 20px 0px;
}

.quote{
	margin-top: 35px;
	font-size: .9em;
	font-style: italic;
	font-weight: bold;
}
.quoteCite{
	margin-top: 5px;
	font-size: .9em;
	font-style: none;
	float: right;
	margin-bottom: 10px;
}

.benefits{
	margin-top: 25px;
	margin-left: 10px;
}
.benefits ul li, .benefits ul li{
	list-style-type: none;
	padding: 6px 35px;
	background: url(<%= asset_path 'check-mark.png' %>) no-repeat left;
	font-size: 1em;
	color: #006633;
	font-weight: bold;
	line-height: 1.8em
}


/* Form */
.appFormBox{
	height: 445px;
	width: 450px;
	margin: 45px 0px 0px;
	float: right;
	border-radius: 7px 7px 7px 7px;
	-moz-border-radius: 7px 7px 7px 7px;
	-webkit-border-radius: 7px 7px 7px 7px;
	box-shadow: 0 5px 5px #444;
	-webkit-box-shadow: 0 5px 5px #444;
	-moz-box-shadow: 0 5px 5px #444;	
	background: #8fc990; /* Old browsers */
	/* IE9 SVG, needs conditional override of 'filter' to 'none' */
	background: url(data:image/svg+xml;base64,);
	background: -moz-linear-gradient(top,  #8fc990 1%, #215e27 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#8fc990), color-stop(100%,#215e27)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  #8fc990 1%,#215e27 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  #8fc990 1%,#215e27 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  #8fc990 1%,#215e27 100%); /* IE10+ */
	background: linear-gradient(to bottom,  #8fc990 1%,#215e27 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#8fc990', endColorstr='#215e27',GradientType=0 ); /* IE6-8 */

}

.appForm h1{
	font-size: 1.6em;
	text-shadow: 0px 0px;
	margin: 10px auto;
	text-align: center;
	font-weight: bold;
	color: #242461;
}

.appForm form{
	font-size: .9em;
	color: #555;
}
.appLoanAmtBox {
	width: 270px;
	height: 55px;
	margin: 10px auto;
	padding: 18px 20px 0px;
	background-color: #fff;
	border-radius: 7px 7px 7px 7px;
	-moz-border-radius: 7px 7px 7px 7px;
	-webkit-border-radius: 7px 7px 7px 7px;
	box-shadow: 0 3px 3px #555;
	-webkit-box-shadow: 0 3px 3px #555;
	-moz-box-shadow: 0 3px 3px #555;	
}

#pLoanAmt {
	color: #281880;
	margin-top: 8px;
	font-size:1.6em;
	text-align: center;
	font-weight: bold;
}

.appDataBox {
	width: 385px;
	height: 225px;
	margin: 15px auto 0px;
	padding: 15px 7px 0px;
	background-color: #c9dbbd;
	border-radius: 7px 7px 7px 7px;
	-moz-border-radius: 7px 7px 7px 7px;
	-webkit-border-radius: 7px 7px 7px 7px;
	box-shadow: 0 3px 3px #555;
	-webkit-box-shadow: 0 3px 3px #555;
	-moz-box-shadow: 0 3px 3px #555;	
}

.appSelectContainer {
	float:left;
	width: 50%;
	font-size: 0.9em;
	margin: 0px 10px 5px 0px;

}

.appStyleSelect select{
  background: transparent;
  width: 142px;
  padding: 2px 3px;
  font-size: .8em;
  color: #221B70;
  border: 0;
  border-radius: 0;
  height: 25px;
  -webkit-appearance: none;
}

.appStyleSelect {
  width: 120px;
  height: 20px;
  overflow: hidden;
  background: url(<%= asset_path 'downarrow.png' %>) no-repeat right #fff;
  border: 1px solid #C6C6C6;
  border-radius: 4px;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;   
}

.appDataBox option {
	font-size: 1.0em;
	}

.appImportanceContainer {
	margin: 10px auto;
	width: 80%;
}
.appImportance {
