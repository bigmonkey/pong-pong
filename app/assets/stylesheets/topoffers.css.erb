/*LandingPage*/

/*change heights for info boxes. add class to compareCardsTable, cardDetailsTable. */
/* to change height go to topCardBoxLeft and see additional class */

.lpPrepaid {
	height: 455px;
}

.lpBadCredit {
	height:325px;
}

.lpPrepaid_b {
	height:300px;
}

/* end custom heights for landing pages */

.lpBody {
    background: #999;
    font-family: helvetica, arial, san-serif;
    color: #666;
}

#lpWrapper {
  width: 900px;
  margin: 0 auto;
  background-color: #fff;
  padding: 0px 20px;
}

#lpMainContent {
	clear: both;
}

.lpHeader {
	float:left; 	
	font-size: 1.5em;
	padding: 0px;
	margin: 0px;
}

.lpTopLink {
	padding-top: 5px;
	float: right;
	font-size: .8em;
	color: #0E8B4D;

}

.topCardBanner {
	margin-top: 0px;
	text-align: center;
	font-size: 1.2em;
	color: #fff;
	padding: 5px 0px 0px;
	border-radius: 3px;
  background-image: url(<%= asset_path "lp/CompareDesign/topbannner.png" %>);
  background-repeat: no-repeat;
  height: 40px;
  text-shadow: 0 -1px #0e8b4d;
	}
	
.topCardBox {
	height: 200px;
  background-image: url(<%= asset_path "lp/CompareDesign/topbox.png" %>);
  background-repeat: no-repeat;
}

.lpBottomSection {
	margin-top: 15px;	
}

.compareCards {
	width: 60%;
	float: left;
}


.compareTopCardBanner {
	text-align: center;
	font-size: 1em;
	color: #fff;
	border-radius: 3px;
	padding: 5px 0px 0px;
	height: 37px;
	background-image: url(<%= asset_path "lp/CompareDesign/comparebannner.png" %>);
	background-repeat: no-repeat;
	text-shadow: 0 -1px #0e8b4d;
}

.lpCardDetails {
	width: 39%;
	float: right;
}

.lpCardDetailsRow {
	border-bottom: 1px solid #DDD;
	padding: 5px 10px;
	font-size: 0.75em;
}

.lpCardDetailsRowLast {
	padding: 5px 10px;
	font-size: 0.75em;
}

.lpCardDetails h3 {
	border: 0px solid #DDD;
	font-size: 1em;
	font-weight: bold;
}

.cardBestForBanner {
	text-align: center;
	font-size: 1em;
	color: #fff;
	border-radius: 3px;
	padding: 5px 0px 0px;
	height: 37px;
	background-image: url(<%= asset_path "lp/CompareDesign/detailsbannner.png" %>);
	background-repeat: no-repeat;
	text-shadow: 0 -1px #4169E1;
}

.lpCardDetailsRow ul, .lpCardDetailsRow ul li {
    margin: 5px 0px 5px 15px;
}
	
.topCardBoxLeft {
	width: 50%;
	padding: 15px 20px;
	float: left;
}

   /* controls width of topCardBoxLeft by adding new class */
.topCardBoxWidth_lpPrepaid_b {
	width: 45%;
}
   /* end width control */

.topCardBoxLeft h1 {
	font-size: 1.45em;
	color: #333;
	letter-spacing: -1px;
	margin-bottom: 0px;
	font-weight: bold;
}

.topCardBoxLeft h2 {
	font-size: 1em;
	color: #4169E1;
	margin-bottom: 5px;
}

.topCardBoxLeft ul, .topCardBoxLeft ul li {
	margin: 5px 0px 10px 10px;
	font-size: 0.95em;
}

.topCardBoxLeft ul li {
	list-style-type: none;
	background: url(<%= asset_path "check-mark.png", :size=> "15x12" %>) no-repeat left;
	padding-left: 15px;
}

.topCardBoxMiddle {
	float: left;
	padding-top: 25px;
}

.topCardBoxMiddleText {
	padding-top: 10px;
	font-size: .7em;
	color: #0A0C60;
	text-align: center;
}

.topPickImage {
	display:block;	
	width:100px;
	height:100px;
	border-radius:50px;
	-moz-border-radius:50px;
	-webkit-border-radius:50px;
	font-size:18px;
	background-color:#0b2690;
	background:linear-gradient(to bottom, #4569f6, #0b2690);
	opacity:0.95;
}

.topPickText {
	padding-top: 28px;
	font-weight: bold;
	color:#fff;	
	text-align:center;
	text-decoration:none;	
}

.topPickImage :hover, .topPickImage :active {
	font-weight: normal;
}

.topCardBoxRight {
	float: right;
	padding: 20px;
}

.compareCardsTable {
	border: 1px solid #DDD;
	border-radius: 3px;
	margin-top: 3px;
	margin-bottom: 20px;
}

.cardDetailsTable {
	border: 1px solid #DDD;
	border-radius: 3px;
	margin-top: 3px;
	background-color: #EEE;
}

.cardDetailsTable p {
	margin-top: 7px;
}

.compareTopCardRow {
	border-bottom: 1px solid #DDD;
	height: 83px;
	padding: 10px 0px;
}

.compareTopCardRow h3, .compareTopCardRowLast h3 {
	font-weight: bold;
	color: #0e8b4d;
	font-size: 0.8em;
}

.compareTopCardRowLast {
	padding: 10px 0px;
}

.compareTopCardRowC2 ul, .compareTopCardRowC2 ul li {
	margin: 5px 0px 0px 10px;
	font-size: 0.85em;
}

.compareTopCardRowC1 {
	width: 20%;
	float: left;
}

.compareTopCardRowC2 {
	width: 60%;
	float: left;
}

.compareTopCardRowC3 {
	width: 20%;
	float: right;
	height: 82px;
	line-height: 77px;
}

.compareTopCardApply {
  margin: 30px 0px;
  padding: 0px;
  font-weight: bold;
  font-size: 0.75em;
  width: 95px;
  text-align: center;
 	background-color: #fff;
 	color: #666;
  display: block;
  height: 25px;
  line-height: 25px;
  border: 1px solid #666;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;

}

.compareTopCardApply:link, .compareTopCardApply:visited {
    color: #666;
}

.compareTopCardApply:hover {
	box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	-webkit-box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	-moz-box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	color: #666;
	font-weight: normal;
}

.compareTopCardApplyTop {
 	margin: 10px 0px;
  padding: 0px;
	font-weight: bold;
  font-size: 1em;
  width: 120px;
  text-align: center;
  background-color: #E58D1F;
 	color: #fff;
  display: block;
  height: 30px;
  line-height: 30px;
  border: 1px solid #E58D1F;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;

}

.compareTopCardApplyTop:link, .compareTopCardApplyTop:visited {
    color: #FFF;
}

.compareTopCardApplyTop:hover {
	box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	-webkit-box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	-moz-box-shadow: 0 0 5px rgba(102, 102, 102, 0.6);
	color: #fff;
	font-weight: normal;
}
/*footer*/
.lpFooter {
	clear: both;
	text-align: center;
	font-size: 0.7em;
	padding: 0px 0px 10px 0px;
	height: 100px;
	margin: 0 auto;
	width: 900px;
	}

#privacyFooter {
	width: 850px;
	margin: 0px auto;
	padding: 15px;
	font-size: 0.7em;
	line-height: 1.4em;
	background-color: #eee;
}

#privacyFooter h1 {
	font-size: 1.2em;
	font-weight: bold;
}

#privacyFooter h3 {
	font-size: .9em;
	color: #444;
	margin-top: 15px;
	font-weight: bold;
}

#privacyFooter h2 {
	font-size: 1em;
	color: #E58D1F;
	margin-top: 15px;
	font-weight: bold;
}
	
#privacyFooter ul li, #privacyFooter ol li {
	margin-left: 40px;
	background: none;	
}

#privacyFooter ul, #privacyFooter ol {
	background: none;	
}