<!DOCTYPE html><!-- HTML 5 -->
<html dir="ltr" lang="en-US">
<% # This is the main layout used for all public facing views %>
<head>
	<%= render '/layouts/header_tags' %>

</head>

<body>
	
	<%= render 'shared/layouts/header' %>
	

	<div id = "wrapper">

		
		<div id="logo"><%= link_to(image_tag("thepaydayhound-logo.png", :alt => "logo" ), "/")%></div>
		<div class = "navSpacer"></div>
		<nav>
				<div><a href="javascript:TogNav()" id="hamburger">&#9776;</a></div>

				<ul id="nav">
			    <li class = "navApply">
