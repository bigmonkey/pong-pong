		<section id = "applicationDropContainer">
			<% #	Uncomment to include dropdown application %>

  		<% # render 'shared/application/applicationFinder' %>
		</section>


		<!-- everything between header and footer -->

		<%= yield %>

		<!-- wrap everything between header and footer -->		
	</div> <!-- end wrapper div -->


	<%= render :partial => 'shared/layouts/footer' %>	 
	<%= debug(params) if Rails.env.development? %>	
