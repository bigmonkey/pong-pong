			            <li><%= link_to("Payday Loans", "/category/payday-loans/") %></li>
			            <li><%= link_to("Installment Loans","/category/installment-loans/") %></li>			
			            <li><%= link_to("Payday Loan Laws", payday_loan_laws_path) %></li>
			        </ul>
			    </li>
			    <li>
			        <%= link_to("Home", "/") %>
