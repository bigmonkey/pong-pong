<% # title and description for seo %>
<% content_for :seotags do %>
	<title>The Payday Hound: Our Top Credit Cards for Bad Credit</title>
	<meta name="description" content="Compare the top Credit Cards for Bad Credit. Find and sign up for the one best for you. Get started now."/>
<% end %>

<div id = "lpWrapper">	

	<header>
		<div class = "lpHeader"><%= image_tag("lp/logo-sm.gif")%></div>
		<div class = "lpTopLink"><%= link_to("See Full Ranking Table", secureds_path, :target => "_blank") %></div>
	</header>
		
	<section id="lpMainContent">	

		<div class="topCardBanner">Sign Up for our <b>Most Popular Credit Card for Bad Credit</b>. No Credit Requirements!</div>
		<div class="topCardBox">
			<div class="topCardBoxLeft">
				<h1>Our Most Popular Secured Credit Card</h1>
				<h2><%= link_to("First Progress Platinum Elite MasterCard®", {:controller => 'partners', :action => 'go', :id => '37', :page=>@page}, :target => "_blank") %></h2>
				<ul>
					<li>&nbsp;&nbsp;&nbsp;&nbsp;No Credit Requirements for Approval! Low Annual Fee</li>
					<li>&nbsp;&nbsp;&nbsp;&nbsp;Credit Card is secured by 100% refundable deposit.</li>
					<li>&nbsp;&nbsp;&nbsp;&nbsp;Build credit history. Reports to all national credit bureaus.</li>
				</ul>
				<div><%= link_to("SIGN UP", {:controller => 'partners', :action => 'go', :id => '37', :page=>@page}, :class => "compareTopCardApplyTop", :target => "_blank") %></div>
			</div>
			<div class="topCardBoxMiddle">
				<%= link_to({:controller => 'partners', :action => 'go', :id => '37', :page=>@page}, :class => "topPickImage",:target => "_blank") do %>
						
								<div class="topPickText">2013<br />Top Pick</div>					
						
				<% end %>		
				<div class="topCardBoxMiddleText"></div>					
			</div>
			<div class="topCardBoxRight"><%= link_to(image_tag("lp/badcredit/firstprogress.png"), {:controller => 'partners', :action => 'go', :id => '37', :page=>@page}, :target => "_blank") %></div>	
		</div>		

		<div class="lpBottomSection">	
			<div class="compareCards">
				<div class="compareTopCardBanner">Compare Our <b>Other Cards for Bad Credit</b></div>
				<div class="compareCardsTable lpBadCredit">	
					<div class="compareTopCardRow">
						<div class="compareTopCardRowC1"><%= link_to(image_tag("secured/AppliedZero.gif"), {:controller => 'partners', :action => 'go', :id => '36', :page=>@page}, :target => "_blank") %></div>
