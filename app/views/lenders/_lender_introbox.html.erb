		<% if !state.blank? %>
		<div class = "lenderIntroBoxesStateTitle"><%= "##{i+1} Payday Hound Pick"%></div>
		<% end %>

		<div id = "lenderIntroBoxes" class = <%= "unpaid" if !@lender.paid %>>
			<div class = "lenderIntroBoxLeft">	
				<% # if lender is on state page header needs to be h2 %>
				<% # if lender is on lender page it's h1 %>
				<% if !state.blank? %>	
					<h2 itemprop="itemreviewed"><%= @lender.name %></h2>
				<% else %>
					<h1 itemprop="itemreviewed"><%= @lender.name %></h1>
				<% end %>	

				<div class = "lenderStars"><%= image_tag("rankings/Payday-Loan-Rank-Star-#{@lender.ranking.round}.png", alt: "#{@lender.ranking.round} Rating", itemprop: "rating") %></div>
